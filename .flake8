[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    .env,
    build,
    dist,
    plantillaMaven,
    node_modules,
    static,
    uploads,
    ejerciciosEstudiantes,
    ejerciciosPropuestos,
    enunciadosEjercicios,
    tests/tmp,
    migrations,
    *.egg-info
per-file-ignores =
    __init__.py:F401